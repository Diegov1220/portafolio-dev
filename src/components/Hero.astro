import Badge from "../components/Badge.astro"
import GitHub from "../icons/GitHub.astro"
import Linkedln from "../icons/Linkedln.astro"
import SocialPill from "../icons/SocialPill.astro"
import foto from '../images/FotoCV.jpg'
---


<div class="max-w-xl">
    <div class="flex gap-4 mb-4">
      <img
        class="rounded-full shadow-lg size-16"
        src={foto.src}
        alt={personalImageAlt}
      />
      <a
        href="http://www.linkedin.com/in/diegovilcacastro"
        target="_blank"
        rel="noopener"
        class="flex items-center transition md:justify-center md:hover:scale-105"
      >
        <Badge>Disponible para trabajar</Badge>
      </a>
    </div>
    <h1
      class="text-4xl font-bold tracking-tight sm:text-5xl text-white"
    >
      Hola, soy Diego
    </h1>
    <p
      class="mt-6 text-xl  [&>strong]:text-yellow-200  [&>strong]:font-semibold dark:text-gray-300"
    >
      +2 años de experiencia. <strong
        >Ingeniero de sistemas y desarrollador web</strong
      > de Peru, Trujillo. Especializado en el desarrollo de aplicaciones web
      únicas.
    </p>
    <nav class="flex flex-wrap gap-4 mt-8">
      <SocialPill href="mailto:diegovilca2000@hotmail.com">
        <Linkedln class="size-4" />
        Contáctame
      </SocialPill>
      <SocialPill href="http://www.linkedin.com/in/diegovilcacastro">
        <Linkedln class="size-4" />
        LinkedIn
      </SocialPill>
      <SocialPill href="https://github.com/Diegov1220">
        <GitHub class="size-4" />
        GitHub
      </SocialPill>
    </nav>
  </div>